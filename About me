    .sidebar{position:fixed;right:0;top:0;height:100vh;width:360px;background:var(--card);box-shadow:-10px 0 40px rgba(0,0,0,0.08);transform:translateX(100%);transition:transform .28s;z-index:70;padding:18px;display:flex;flex-direction:column;gap:12px}

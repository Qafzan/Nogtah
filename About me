  <script>
    /* ======= Donn√©es sample ======= */
    const items = [
      {id:1,title:"T-shirt Graphique",section:"vetements",img:"https://picsum.photos/id/1059/800/600",desc:"T-shirt imprim√©, √©dition limit√©e.",price:45},
      {id:2,title:"Sweat Calligraphie",section:"vetements",img:"https://picsum.photos/id/1060/800/600",desc:"Sweat √† capuche, calligraphie originale.",price:75},

      {id:3,title:"Affiche murale",section:"decoration",img:"https://picsum.photos/id/1027/800/600",desc:"Affiche artistique A2.",price:40},
      {id:4,title:"Dessin encadr√©",section:"decoration",img:"https://picsum.photos/id/1033/800/600",desc:"≈íuvre originale encadr√©e.",price:120},

      {id:5,title:"Cours dessin",section:"apprentissage",img:"https://pic

    /* ======= UI references ======= */
    const gallery = document.getElementById('gallery');
    const products = document.getElementById('products');
    const filters = document.getElementById('filters');
    const search = document.getElementById('search');

    const lightbox = document.getElementById('lightbox');
    const lbImg = document.getElementById('lbImg');
    const lbTitle = document.getElementById('lbTitle');
    const lbDesc = document.getElementById('lbDesc');
    const lbPrice = document.getElementById('lbPrice');
    const addCartBtn = document.getElementById('addCart');
    const addFavBtn = document.getElementById('addFav');

    const cartBtn = document.getElementById('cartBtn');
    const cartSidebar = document.getElementById('cartSidebar');
    const closeCart = document.getElementById('closeCart');
    const cartList = document.getElementById('cartList');
    const cartCount = document.getElementById('cartCount');
    const cartTotal = document.getElementById('cartTotal');

    let state = {filter:'all',query:'',cart:[],favs:[]};
    let currentItem = null;

    /* ======= Render functions ======= */
    function renderGallery(){
      gallery.innerHTML='';
      const q = state.query.trim().toLowerCase();
      const filtered = items.filter(it => (state.filter==='all' || it.category===state.filter) && (it.title.toLowerCase().includes(q) || it.desc.toLowerCase().includes(q)) );
      filtered.forEach(it => {
        const card = document.createElement('article');
        card.className='card';
        card.innerHTML = `
          <img src="${it.img}" alt="${it.title}" loading="lazy" />
          <div class="meta">
            <h3>${it.title}</h3>
            <p class="small">${it.category}</p>
            <div class="price">${it.price>0? it.price + '‚Ç¨' : 'Projet'}</div>
          </div>
          <div class="actions">
            <button class="btn view" data-id="${it.id}">Voir</button>
            <button class="btn add" data-id="${it.id}">Ajouter</button>
          </div>`;
        gallery.appendChild(card);
      });
    }

    function renderProducts(){
      products.innerHTML='';
      const sellables = items.filter(i=>i.price>0);
      sellables.forEach(it=>{
        const card = document.createElement('article');
        card.className='card';
        card.innerHTML = `
          <img src="${it.img}" alt="${it.title}" loading="lazy" />
          <div class="meta">
            <h3>${it.title}</h3>
            <p class="small">${it.desc}</p>
            <div class="price">${it.price}‚Ç¨</div>
          </div>
          <div class="actions">
            <button class="btn view" data-id="${it.id}">D√©tails</button>
            <button class="btn add" data-id="${it.id}">Ajouter au panier</button>
          </div>`;
        products.appendChild(card);
      });
    }

    /* ======= Lightbox ======= */
    function openLightbox(id){
      const it = items.find(x=>x.id==id);
      if(!it) return;
      currentItem = it;
      lbImg.src = it.img;
      lbTitle.textContent = it.title;
      lbDesc.textContent = it.desc;
      lbPrice.textContent = it.price>0? it.price + '‚Ç¨' : 'Projet (non vendu)';
      lightbox.classList.add('open');
    }
    function closeLightbox(){ lightbox.classList.remove('open'); currentItem=null }

    /* ======= Cart ======= */
    function addToCart(id){
      const it = items.find(x=>x.id==id);
      if(!it || it.price<=0) { alert('Produit non disponible √† la vente'); return }
      const entry = state.cart.find(c=>c.id==id);
      if(entry) entry.qty++;
      else state.cart.push({id:it.id,title:it.title,price:it.price,qty:1,img:it.img});
      updateCartUI();
    }
    function updateCartUI(){
      cartList.innerHTML='';
      let total = 0; let count=0;
      state.cart.forEach(ci=>{
        total += ci.price * ci.qty; count += ci.qty;
        const node = document.createElement('div'); node.className='cart-item';
        node.innerHTML = `<img src="${ci.img}" alt="${ci.title}" /><div class=\"infos\"><div style=\"font-weight:700\">${ci.title}</div><div class=\"small\">${ci.qty} √ó ${ci.price}‚Ç¨</div></div><div><button class=\"btn remove\" data-id=\"${ci.id}\">Suppr</button></div>`;
        cartList.appendChild(node);
      });
      cartTotal.textContent = total + '‚Ç¨';
      cartCount.textContent = count;
    }
    function removeFromCart(id){ state.cart = state.cart.filter(c=>c.id!=id); updateCartUI(); }

    /* ======= Events ======= */
    document.addEventListener('click', e=>{
      const v = e.target.closest('.view'); if(v){ openLightbox(v.dataset.id); }
      const a = e.target.closest('.add'); if(a){ addToCart(Number(a.dataset.id)); }
      const rem = e.target.closest('.remove'); if(rem){ removeFromCart(Number(rem.dataset.id)); }
    });

    // lightbox buttons
    document.getElementById('closeLb').addEventListener('click', closeLightbox);
    lightbox.addEventListener('click', (e)=>{ if(e.target===lightbox) closeLightbox(); });
    addCartBtn.addEventListener('click', ()=>{ if(currentItem) addToCart(currentItem.id); });
    addFavBtn.addEventListener('click', ()=>{
      if(!currentItem) return; if(!state.favs.includes(currentItem.id)) state.favs.push(currentItem.id); alert('Ajout√© aux favoris');
    });

    // filters
    filters.addEventListener('click', e=>{
      const btn = e.target.closest('button'); if(!btn) return; const f = btn.dataset.filter; state.filter = f; Array.from(filters.querySelectorAll('.btn')).forEach(b=>b.classList.remove('active')); btn.classList.add('active'); renderGallery();
    });

    // search
    search.addEventListener('input', e=>{ state.query = e.target.value; renderGallery(); });

    // cart UI
    cartBtn.addEventListener('click', ()=>{ cartSidebar.classList.add('open'); });
    closeCart.addEventListener('click', ()=>{ cartSidebar.classList.remove('open'); });

    // checkout (demo)
    document.getElementById('checkout').addEventListener('click', ()=>{
      if(state.cart.length===0) return alert('Ton panier est vide');
      // Ici tu peux int√©grer Stripe/PayPal. Pour l'exemple :
      alert('Proc√©der au paiement ‚Äî exemple. Int√©gration √† faire (Stripe/PayPal).');
    });

    // initial render
    renderGallery(); renderProducts(); updateCartUI();

    // small enhancement: keyboard esc to close
    document.addEventListener('keydown', e=>{ if(e.key==='Escape'){ closeLightbox(); cartSidebar.classList.remove('open') } });
  </script>
</body>
